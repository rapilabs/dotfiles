[user]
	name = David Sanders
	email = dsanders@rapilabs.com
[diff]
[color]
    ui = auto
[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    fix = commit --amend --no-edit
    aa = add --all
    head = !git l -1
    h = !git head
    r = !git l -20
    ra = !git r --all
    ff = merge --ff-only
    pullff = pull --ff-only
    l = log --graph --abbrev-commit --date=relative 
    la = !git l --all
    fa = fetch --all
    pom = push origin master
    br = branch
    pr = pull --rebase
    forcepush = push --force-with-lease
[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[format]
    ;pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[merge]
    tool = vimdiff
[push]
	default = current
